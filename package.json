{
  "name": "cross-chain-bridge",
  "version": "1.0.0",
  "description": "Cross-chain asset bridge between L1 and L2",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:l1": "hardhat run scripts/deploy-l1.js --network sepolia",
    "deploy:l2": "hardhat run scripts/deploy-l2.js --network arbitrumSepolia",
    "deploy:l1:mainnet": "hardhat run scripts/deploy-l1.js --network mainnet",
    "deploy:l2:mainnet": "hardhat run scripts/deploy-l2.js --network arbitrum",
    "bridge": "node scripts/bridge-assets.js",
    "balance": "hardhat run scripts/check-balance.js",
    "balance:sepolia": "hardhat run scripts/check-balance.js --network sepolia",
    "balance:arbitrum": "hardhat run scripts/check-balance.js --network arbitrumSepolia",
    "test:connection": "node scripts/test-connection.js",
    "interact": "node scripts/interact.js",
    "demo": "node scripts/quick-demo.js",
    "monitor": "node scripts/simple-monitor.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1"
  }
}